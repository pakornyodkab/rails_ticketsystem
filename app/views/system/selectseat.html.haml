.container
	%h1 Select Seat
	.div{style:"display:flex; flex-direction: row; justify-content: center; align-items: center"}
		%img.img-thumbnail{src:@movie.imagelink,width:"232",height:"367",style:"margin-right:5em"}
		%div
			%p.text-left{class:"fs-6"} Movie : #{@movie.name}
			%p.text-left{class:"fs-6"} Theater : #{@theater.name} 
			%p.text-left{class:"fs-6"} Time : #{@timetable.datetime_start}
			%p.text-left{class:"fs-6"} Duration: #{@movie.duration}
			%p.text-left{class:"fs-6"} Genre: #{@movie.genre}
			%p.text-left{class:"fs-6"} Date in: #{@movie.date_in}
			%p.text-left{class:"fs-6"} Date out: #{@movie.date_out}
			
	=render "selectseatform"