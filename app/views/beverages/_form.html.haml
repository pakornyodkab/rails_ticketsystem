= form_for @beverage do |f|
  - if @beverage.errors.any?
    #error_explanation
      %h2= "#{pluralize(@beverage.errors.count, "error")} prohibited this beverage from being saved:"
      %ul
        - @beverage.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.number_field :price
  .actions
    = f.submit 'Save'
