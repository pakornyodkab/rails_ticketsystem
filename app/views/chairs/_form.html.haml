-# frozen_string_literal: true
= simple_form_for(@chair) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :row
    = f.input :seat
    = f.input :price
    = f.input :chair_type
    = f.association :theater

  .form-actions
    = f.button :submit
